{
    "name": "phpdoc-comment-vscode-plugin",
    "displayName": "PHPDoc Comment",
    "description": "Add phpdoc @param and @return tag for selected function signatures.",
    "version": "1.3.0",
    "publisher": "rexshi",
    "icon": "images/logo.png",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/shishirui/phpdoc-comment-vscode-plugin"
    },
    "activationEvents": [
        "onCommand:extension.addPHPComment"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.addPHPComment",
                "title": "Add PHPDoc Comment"
            }
        ],
        "keybindings": [
            {
                "command": "extension.addPHPComment",
                "key": "ctrl+shift+i",
                "mac": "cmd+shift+i",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.addPHPComment",
                    "when": "resourceLangId == php"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.9",
        "eslint": "^4.11.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.37"
    }
}
